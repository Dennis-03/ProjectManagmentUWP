<Page
    x:Class="ProjectManagmentApp.View.SignUp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjectManagmentApp.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:ProjectManagmentApp.Model"
    mc:Ignorable="d"
    Background="{ThemeResource SecondaryColor}">
    <Page.Resources>
        <Style TargetType="ComboBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Page.Resources>
    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Height="400"
                    Width="500"
                    Padding="20"
                    Background="{ThemeResource PrimaryColor}"
                    CornerRadius="5">
            <TextBlock x:Uid="Register"
                       Style="{ThemeResource TitleTextBlockStyle}"
                       TextAlignment="Center"/>
            <StackPanel Height="30"
                        Padding="5">
                <TextBlock Name="ResponseTextBlock"
                           Foreground="Red"
                           TextAlignment="Center"/>
            </StackPanel>
            <TextBox Style="{ThemeResource TransparentTextBox}"
                     Name="Username"
                     x:Uid="Username"
                     Margin="20,10"/>
            <StackPanel 
                Orientation="Horizontal"
                BorderThickness="0,0,0,1"
                BorderBrush="White"
                Margin="20,10">
                <TextBlock x:Uid="Avatar"
                           VerticalAlignment="Center"/>
                <ComboBox
                    Name="AvatarCB"
                    Height="40"
                    Background="{ThemeResource PrimaryColor}"
                    Padding="0"
                    Width="80"
                    SelectionChanged="AvatarCB_SelectionChanged"
                    ItemsSource="{x:Bind _avatarList}"
                    Margin="30,0,10,0">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="data:Avatar">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{x:Bind Path}"
                                   Width="30"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button 
                    Name="CustomAvatar"
                    Style="{StaticResource MyButtonStyle}"
                    Content="Choose custom avatar"
                    Click="CustomAvatar_Click"/>

            </StackPanel>

            <PasswordBox Name="Password"
                         Style="{ThemeResource PasswordBoxStyle}"
                         x:Uid="Password"
                         Margin="20,10,20,0"/>
            <PasswordBox Name="RePassword"
                         Style="{ThemeResource PasswordBoxStyle}"
                         x:Uid="RePassword"
                         Margin="20"/>
            <Button Name="SignUpButton"
                    Style="{StaticResource MyButtonStyle}"
                    x:Uid="Submit"
                    Click="SignUpButton_Click"
                    Background="{ThemeResource PrimaryColor}"
                    Foreground="{ThemeResource TertairyColor}"
                    BorderBrush="{ThemeResource TertairyColor}"
                    CornerRadius="3"
                    HorizontalAlignment="Center"/>
            <Button Name="SignIn"
                    x:Uid="SignIn"
                    Style="{StaticResource MyButtonStyle}"
                    Click="SignIn_Click"
                    Margin="0,10,0,0"
                    Background="{ThemeResource PrimaryColor}"
                    HorizontalAlignment="Center"
                    Foreground="{ThemeResource TertairyColor}"/>
        </StackPanel>
    </Grid>
</Page>
